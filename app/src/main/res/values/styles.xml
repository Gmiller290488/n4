<resources>

    <!-- Tema base da aplicação. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="actionBarStyle">@style/Londonn4guideAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Londonn4guideAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="elevation">0dp</item>
    </style>


    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="android:background">#4A312A</item>
        <item name="android:textColor">#ffffff</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>


    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>