<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingBottom="@dimen/double_vertical_padding"
            android:paddingLeft="@dimen/standard_horizontal_padding"
            android:paddingRight="@dimen/standard_horizontal_margin"
            android:paddingTop="@dimen/double_vertical_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    style="@style/TitleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    tools:text="Max's" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/knownfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Best known for Sandwiches" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/distance"
                style="@style/DistanceTextView"
                android:layout_width="@dimen/distance_width"
                android:layout_height="@dimen/distance_height"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/distance_circle"
                tools:text="2.4k" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>